# ==========================================
# PowerSOL Backend - Environment Variables
# ==========================================

# ============================================
# API Configuration
# ============================================
PORT=4000
NODE_ENV=development

# ============================================
# Supabase
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# ============================================
# Solana Configuration
# ============================================

# RPC URL - Use devnet para testes, mainnet para produção
RPC_URL=https://api.devnet.solana.com
# RPC_URL=https://api.mainnet-beta.solana.com

# Authority Wallet (Admin que gerencia loterias)
# Generate with: npm run generate-keypair
AUTHORITY_WALLET_SECRET=base58_secret_here

# Treasury Wallet (Recebe 30% das vendas)
TREASURY_WALLET=your_treasury_public_key_here

# Program IDs (Gerados após deploy dos programas Anchor)
POWERSOL_CORE_PROGRAM_ID=your_core_program_id_here
POWERSOL_CLAIM_PROGRAM_ID=your_claim_program_id_here

# VRF Configuration (Switchboard)
VRF_QUEUE_PUBKEY=your_vrf_queue_pubkey_here

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_very_long_random_secret_min_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=*

# ============================================
# Affiliate System
# ============================================
AFFILIATES_POOL_WALLET=your_affiliates_pool_wallet_here
DELTA_WALLET=your_delta_wallet_here

# ============================================
# Feature Flags
# ============================================
ENABLE_CRON_JOBS=true
ENABLE_VRF=true
ENABLE_WEBHOOKS=true

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
